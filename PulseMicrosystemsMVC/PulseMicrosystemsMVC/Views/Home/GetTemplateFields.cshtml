@model PulseMicrosystemsMVC.Models.ViewModel

<table class="table">
    <tr>
        <th>@Model.TemplateName</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.TemplateFields.Count(); i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(item => Model.TemplateFields[i].Name)
                @Html.HiddenFor(item => Model.TemplateID)
            </td>
            <td>
                @Html.TextBoxFor(item => Model.TemplateFields[i].Name, new { @id = "FiledValue" + i.ToString(), @type = "Field", @Value = "", @maxlength = "25", @autocomplete = "off" })
                @Html.ValidationMessageFor(item => Model.TemplateFields[i].Name)
            </td>
        </tr>
    }
</table>

<table class="table">
    <tr>
        <th>Preview</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.TemplateFields.Count(); i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(item => Model.TemplateFields[i].Name)
            </td>
            <td>
                @Html.TextBoxFor(item => Model.TemplateFields[i].Name, new { @id = "FiledValue" + i.ToString() + "_label", @type = "Field", @Class = "textBoxAsLabel", @Value = "", @readonly = "readonly" })
            </td>
        </tr>
    }
</table>





